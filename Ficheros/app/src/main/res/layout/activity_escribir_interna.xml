<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.ficheros.EscribirInterna"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvOperando1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Operando 1:" />

    <EditText
        android:id="@+id/edtOperando1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="3"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/txvOperando2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Operando 2:" />

    <EditText
        android:id="@+id/edtOperando2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="5"
        android:textAlignment="textEnd" />

    <Button
        android:id="@+id/btnOperando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+" />

    <TextView
        android:id="@+id/txvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado:" />

    <TextView
        android:id="@+id/txvMuestraResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="8" />

    <EditText
        android:id="@+id/edtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

</LinearLayout>
